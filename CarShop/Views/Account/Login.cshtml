@model CarShop.ViewModels.LoginViewModel


<form method="post" class="login-registerform" asp-controller="Account" asp-action="Login">
    <h2>Login</h2>
    <div class="content">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Email">Введите Email</label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div id="remember">
            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe" />
        </div>
        <div>
            <input type="submit" value="Login" class="loginregister-btn" />
        </div>
        <div >
            <a asp-action="Register" asp-controller="Account" class="btn-registerPage">Register</a>
        </div>
    </div>
</form>
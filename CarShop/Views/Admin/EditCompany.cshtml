@model CarShop.ViewModels.EditCompanyViewModel;

@{
    ViewBag.Title = "Edit Company";
}
<form asp-action="EditCompany" asp-controller="Admin" class="login-registerform">
    <div class="content">
        <div asp-validation-summary="All"></div>
        <div>
            <input type="hidden" asp-for="CompanyId" />
        </div>
        <div>
            <label asp-for="CompanyName">CompanyName</label>
            <input type="text" asp-for="CompanyName" />
        </div>

        <div>
            <input type="submit" value="Save" class="loginregister-btn" />
        </div>
    </div>
</form>